<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.istu.achipiga.controllers.Info">
   <VBox>
      <children>
          <Label text="ИНН:" />
          <Label fx:id="innLabel" />
      </children>
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin>
   </VBox>
   <VBox>
      <children> <!-- Нередактируемый Label -->
      
          <Label text="Название:" />
          <Label fx:id="nameLabel" />
      </children>
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin>
   </VBox>
    <VBox>
        <children> <!-- Нередактируемый Label -->

            <Label text="Адрес:" />
            <Label fx:id="locationLabel" />
        </children>
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </VBox>
    <VBox>
        <children>
            <Label text="Начальник:" />
            <Label fx:id="bossLabel"/>
        </children>
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </VBox>
   <VBox>
      <children>
      <Label text="Работники:" />
      <ListView fx:id="employeeListView" VBox.vgrow="ALWAYS"/>
      </children>
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin>
   </VBox>

   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding> <!-- Нередактируемый Label -->
</VBox>
