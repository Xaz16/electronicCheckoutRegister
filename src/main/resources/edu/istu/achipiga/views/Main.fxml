<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="edu.istu.achipiga.controllers.Main"
            stylesheets="./Main.css">
    <left>
        <VBox styleClass="nav-menu" style="-fx-background-color: #2c3e50;">
            <padding>
                <Insets top="20" right="10" bottom="20" left="10"/>
            </padding>
            <spacing>10</spacing>
            
            <Label text="Электронный кассовый аппарат" style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" wrapText="true"/>
            <Separator style="-fx-background-color: #34495e;"/>
            
            <TreeView fx:id="navTree" VBox.vgrow="ALWAYS" showRoot="false" styleClass="nav-tree"/>
        </VBox>
    </left>
    
    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: #f5f6fa;">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
        </StackPane>
    </center>
</BorderPane>
